@model List<FribergCarRentalAB.Models.Car>

<h2>Tillgängliga bilar</h2>

@if (Model == null || !Model.Any())
{
    <p>Det finns inga bilar att visa ännu.</p>
}
else
{
    <ul>
        @foreach (var car in Model)
        {
            <li>
                <strong>@car.Brand @car.Model</strong><br />
                <a asp-action="Details" asp-route-id="@car.Id">Se detaljer och boka</a>
            </li>
        }
    </ul>
}
