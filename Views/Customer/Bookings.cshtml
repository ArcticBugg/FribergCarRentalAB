@model List<FribergCarRentalAB.Models.Booking>

<h2>Dina bokningar</h2>

@if (Model.Count == 0)
{
    <p>Du har inga bokningar.</p>
}
else
{
    <table class="booking-table">



        <thead>
            <tr>
                <th>Bil</th>
                <th>Startdatum</th>
                <th>Slutdatum</th>
                <th>Status</th>
                <th>Ta bort</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Car.Brand @booking.Car.Model</td>
                    <td>@booking.StartDate.ToShortDateString()</td>
                    <td>@booking.EndDate.ToShortDateString()</td>
                    <td>@(booking.Confirmed ? "Bekräftad" : "Väntar på bekräftelse")</td>
                    <td>
                        <a asp-action="DeleteBooking" asp-route-id="@booking.Id" class="btn btn-danger btn-sm">Ta bort</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
